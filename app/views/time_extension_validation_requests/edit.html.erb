<% content_for :page_title do %>
  <%= t(".page_title", id: @validation_request["id"]) %>
<% end %>
<div class="govuk-grid-row govuk-!-margin-top-7">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-width-container">
      <h1 class="govuk-heading-l"><%= t(".title") %></h1>
      <p class="govuk-body"><%= t(".the_following_changes") %></p>
      <p class="govuk-heading-s"><%= t(".what_you_need") %></p>
      <ul class="govuk-list govuk-list--bullet">
        <li><%= t(".select_if_you") %></li>
        <li><%= t(".if_you_disagree") %></li>
        <li><%= t(".click_submit_to") %></li>
      </ul>
      <div class="govuk-inset-text">
        <%= t(".if_your_response", date: date_due(@validation_request)) %>
      </div>
      <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
      <div style="margin-top: 50px;">
        <p class="govuk-body">
          <strong><%= t(".previous_expiry_date") %></strong><br>
          <%= render(FormattedContentComponent.new(text: format_datetime(@planning_application["expiry_date"]))) %>
        </p>
      </div>
      <div class="govuk-!-margin-top-6">
        <p class="govuk-body">
          <strong><%= t(".proposed_expiry_date") %></strong><br>
          <%= render(FormattedContentComponent.new(text: format_datetime(@validation_request["proposed_expiry_date"]))) %>
        </p>
        <div class="govuk-!-margin-top-6">
          <p class="govuk-body">
            <strong>The reason the case officer gave for needing to extend the expiry date:</strong>
            <%= render(FormattedContentComponent.new(text: @validation_request["reason"])) %>
          </p>
        </div>
      </div>
    </div>
    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
    <%= render 'form' %>
  </div>
</div>
