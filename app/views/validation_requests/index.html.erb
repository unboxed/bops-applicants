<% content_for :page_title, "Your planning application" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t(".title") %></h1>
    <p class="govuk-body">
      <strong><%= t(".at") %></strong>
      <%= full_address(@planning_application) %><br>
      <strong><%= t(".date_received") %></strong>
      <%= date_received(@planning_application) %><br>
      <strong><%= t(".application_number") %></strong>
      <%= @planning_application["reference"] %><br>
      <br>
    </p>
    <p class="govuk-body"><%= t(".the_case_officer") %></p>
    <h2 class="govuk-heading-m"><%= t(".what_you_need") %></h2>
    <p class="govuk-body"><%= t(".view_the_requests") %></p>
    <ul class="govuk-list govuk-list--bullet">
      <li><%= t(".follow_the_link") %></li>
      <li><%= t(".once_you_have") %></li>
    </ul>
    <p class="govuk-body"><%= t(".your_response") %></p>
    <p class="govuk-body"><%= t(".you_need_to") %></p>
  </div>
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <ol class="govuk-list govuk-list--number">
      <% if @validation_requests["data"]["description_change_validation_requests"].present? %>
        <%= render "description_change_validation_requests" %>
      <% end %>

      <% if @validation_requests["data"]["time_extension_validation_requests"].present? %>
        <%= render "time_extension_validation_requests" %>
      <% end %>

      <% if @planning_application["status"] != "not_started" %>
        <% if @validation_requests["data"]["replacement_document_validation_requests"].present? %>
          <%= render "replacement_document_validation_requests" %>
        <% end %>

        <% if @validation_requests["data"]["additional_document_validation_requests"].present? %>
          <%= render "additional_document_validation_requests" %>
        <% end %>

        <% if @validation_requests["data"]["red_line_boundary_change_validation_requests"].present? %>
          <%= render "red_line_boundary_change_validation_requests" %>
        <% end %>

        <% if @validation_requests["data"]["fee_change_validation_requests"].present? %>
          <%= render "fee_change_validation_requests" %>
        <% end %>

        <% if @validation_requests["data"]["ownership_certificate_validation_requests"].present? %>
          <%= render "ownership_certificate_validation_requests" %>
        <% end %>

        <% if @validation_requests["data"]["other_change_validation_requests"].present? %>
          <%= render "other_change_validation_requests" %>
        <% end %>

        <% if @validation_requests["data"]["pre_commencement_condition_validation_requests"].present? %>
          <%= render "pre_commencement_condition_validation_requests" %>
        <% end %>

        <% if @validation_requests["data"]["heads_of_terms_validation_requests"].present? %>
          <%= render "heads_of_terms_validation_requests" %>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>
